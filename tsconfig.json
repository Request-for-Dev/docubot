{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["jest", "node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    // "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    // "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/sa/*": ["./src/actions/*"],
      "@/a/*": ["./src/app/*"],
      "@/api/*": ["./src/app/api/*"],
      "@/c/*": ["./src/components/*"],
      "@/h/*": ["./src/hooks/*"],
      "@/s/*": ["./src/store/*"],
      "@/l/*": ["./src/lib/*"],
      "@/u/*": ["./src/lib/util/*"],
      "#/*": ["./*"]
    },
    "rootDir": "./",
    "baseUrl": ".",
    "outDir": "./out"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.ts",
    "jest.setup.ts",
    "build-utilities/generateRobots.mjs"
  ],
  "exclude": ["node_modules"]
}
